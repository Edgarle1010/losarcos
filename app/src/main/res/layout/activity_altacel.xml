<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AltacelActivity">

    <TextView
        android:id="@+id/textViewNum"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Registrate con tu numero de celular"
        android:textColor="#212121"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/numText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de celular"
        android:translationX="32dp"
        android:translationY="50dp"/>

    <EditText
        android:id="@+id/celText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Numero de Celular"
        android:translationX="30dp"
        android:translationY="80dp"
        android:focusable="true"/>


    <Button
        android:id="@+id/buttonCheck"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/colorPrimary"
        android:text="Siguiente"
        android:textColor="#fff"

        android:translationY="200dp" />

    <TextView
        android:id="@+id/lastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:translationX="30dp"
        android:translationY="400dp"  />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:translationX="30dp"
        android:translationY="350dp" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:translationX="30dp"
        android:translationY="300dp" />
</androidx.constraintlayout.widget.ConstraintLayout>